<div class="container">
  <br>
  <div class="row">
    <div class="col-xs-12">
      <center><img class="img-responsive" src="/lognetflix.png" width=450px"" alt=""></center>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 pull-right" align="right">
      <button type="button" name="button" class="btn btn-lg btn-nextia-primary" onclick="goTo('/nueva_pelicula')">Crear nuevo</button>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Ano</th>
            <th>Sinopsis</th>
          </tr>
        </thead>
        <tbody>
          <%@movies.each do |pelicula| %>
          <tr class="change">
            <td ><%=pelicula.id %></td>
            <td><%=pelicula.title %></td>
            <td><%=pelicula.year %></td>
            <td><%=pelicula.description %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
  function goTo(link){
    window.location.href = link;
  }
</script>
